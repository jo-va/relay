{
	"name": "test",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"db:up": "docker-compose up -d",
		"db:down": "docker-compose down",
		"dev": "cross-env MONGODB_URI=mongodb://localhost:27017/relay nodemon src/server.js",
		"lint": "eslint src/"
	},
	"dependencies": {
		"body-parser": "^1.18.2",
		"cors": "^2.8.4",
		"crypto": "^1.0.1",
		"express": "^4.16.3",
		"graphql": "^0.13.2",
		"graphql-server-express": "^1.3.2",
		"graphql-subscriptions": "^0.5.8",
		"graphql-tools": "^2.23.1",
		"mongoose": "^5.0.11",
		"mongoose-unique-validator": "^2.0.0",
		"subscriptions-transport-ws": "^0.9.7"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-plugin-inline-import": "^2.0.6",
		"babel-preset-latest": "^6.24.1",
		"cross-env": "^5.1.4",
		"eslint": "^4.19.0",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.9.0",
		"nodemon": "^1.17.2"
	},
	"nodemonConfig": {
		"verbose": false,
		"ignore": [
			"node_modules",
			"mongodbdata"
		],
		"env": {
			"NODE_ENV": "development",
			"BABEL_DISABLE_CACHE": 1
		},
		"execMap": {
			"js": "babel-node"
		},
		"ext": ".js,.json,.graphql,.gql",
		"watch": "./src"
	},
	"eslintConfig": {
		"extends": "airbnb-base",
		"plugins": [
			"import"
		],
		"rules": {
			"indent": [
				2,
				"tab"
			],
			"no-tabs": "off",
			"comma-dangle": "off",
			"no-console": "off",
			"function-paren-newline": "off",
			"no-param-reassign": "off",
			"arrow-body-style": "off",
			"import/prefer-default-export": "off",
			"no-underscore-dangle": "off"
		}
	}
}
